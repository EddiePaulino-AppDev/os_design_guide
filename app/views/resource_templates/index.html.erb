<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All resources
    </h1>

    <a href="/resources/new" class="btn btn-block btn-outline-secondary">
      Add a new resource
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "resource_templates/resources_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Category
        </th>

        <th>
          Tab
        </th>

        <th>
          Resource
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @resources.each do |resource| %>
      <tr>
        <td>
          <%= resource.id %>
        </td>

        <td>
          <%= resource.category %>
        </td>

        <td>
          <% if resource.tab.present? %>
            <a href="/tabs/<%= resource.tab.id %>">
              <%= resource.tab.title %>
            </a>
          <% end %>
        </td>

        <td>
          <%= resource.resource %>
        </td>

        <td>
          <%= time_ago_in_words(resource.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(resource.updated_at) %> ago
        </td>

        <td>
          <a href="/resources/<%= resource.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @resources, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
