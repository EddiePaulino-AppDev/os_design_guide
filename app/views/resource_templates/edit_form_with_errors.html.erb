<% if @resource.errors.any? %>
  <% @resource.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit resource #<%= @resource.id %>
</h1>

<hr>

<form action="/update_resource/<%= @resource.id %>" method="post">

  <div class="form-group">
    <label for="category">
      Category
    </label>

    <input type="text" id="category" name="category" class="form-control" value="<%= @resource.category %>">
  </div>

  <div class="form-group">
    <label for="tab_id">
      Tab
    </label>

    <%= select_tag(:tab_id, options_from_collection_for_select(Tab.all, :id, :title, @resource.tab_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="resource">
      Resource
    </label>

    <input type="text" id="resource" name="resource" class="form-control" value="<%= @resource.resource %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update resource
  </button>
</form>

<hr>

<a href="/resources">
  Go back
</a>
