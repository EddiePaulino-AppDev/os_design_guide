<h1>
  Edit text component #<%= @text_component.id %>
</h1>

<hr>

<form action="/update_text_component/<%= @text_component.id %>" method="post">

  <div class="form-group">
    <label for="tab_id">
      Tab
    </label>

    <%= select_tag(:tab_id, options_from_collection_for_select(Tab.all, :id, :title, @text_component.tab_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="header">
      Header
    </label>

    <input type="text" id="header" name="header" class="form-control" value="<%= @text_component.header %>">
  </div>

  <div class="form-group">
    <label for="content">
      Content
    </label>

    <textarea id="content" name="content" class="form-control" rows="3"><%= @text_component.content %></textarea>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update text component
  </button>
</form>

<hr>

<a href="/text_components">
  Go back
</a>
