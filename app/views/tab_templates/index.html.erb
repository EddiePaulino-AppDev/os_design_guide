<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All tabs
    </h1>

    <a href="/tabs/new" class="btn btn-block btn-outline-secondary">
      Add a new tab
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "tab_templates/tabs_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Num of tabs
        </th>

        <th>
          Topic
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @tabs.each do |tab| %>
      <tr>
        <td>
          <%= tab.id %>
        </td>

        <td>
          <%= tab.title %>
        </td>

        <td>
          <%= tab.num_of_tabs %>
        </td>

        <td>
          <% if tab.topic.present? %>
            <a href="/topics/<%= tab.topic.id %>">
              <%= tab.topic.csi_section %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(tab.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(tab.updated_at) %> ago
        </td>

        <td>
          <a href="/tabs/<%= tab.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @tabs, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
