<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All topics
    </h1>

    <a href="/topics/new" class="btn btn-block btn-outline-secondary">
      Add a new topic
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "topic_templates/topics_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Csi section
        </th>

        <th>
          Title
        </th>

        <th>
          Engineering discipline
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @topics.each do |topic| %>
      <tr>
        <td>
          <%= topic.id %>
        </td>

        <td>
          <%= topic.csi_section %>
        </td>

        <td>
          <%= topic.title %>
        </td>

        <td>
          <%= topic.engineering_discipline %>
        </td>

        <td>
          <%= time_ago_in_words(topic.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(topic.updated_at) %> ago
        </td>

        <td>
          <a href="/topics/<%= topic.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @topics, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
