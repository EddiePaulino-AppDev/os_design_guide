<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Tabs

    <a data-toggle="collapse" href="#topic_tabs_new_form">
      Add tab
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @topic.tabs.each do |tab| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/tabs/<%= tab.id %>">
          <%= tab.title %>
        </a>

        <a href="/delete_tab_from_topic/<%= tab.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="topic_tabs_new_form">
        <%= render partial: "topic_templates/topic_tabs_new_form" %>
      </div>
    </div>

  </ul>
</div>
